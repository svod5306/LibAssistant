<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.myinfo.MyInfoFragment"
    android:id="@+id/frag_myinfo">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/tb1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:background="@drawable/shadow">
            <TextView
                android:id="@+id/home_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的信息"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/my_msg"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/nomsg"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_myphoto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tb1"
            app:layout_constraintDimensionRatio="3.5:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/photo"
            app:layout_constraintBottom_toTopOf="@id/txt_name"
            />
        <View
            android:id="@+id/line1"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#DDDDDD"
            app:layout_constraintTop_toBottomOf="@id/imageView_myphoto"
            app:layout_constraintBottom_toTopOf="@id/txt_name"
            />
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="16sp"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintBottom_toTopOf="@id/line2" />
        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#DDDDDD"
            app:layout_constraintTop_toBottomOf="@id/txt_name"
            app:layout_constraintBottom_toTopOf="@id/txt_sex"
            />
        <TextView
            android:id="@+id/txt_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textSize="16sp"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@id/line2"
            app:layout_constraintBottom_toTopOf="@id/line3" />
        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#DDDDDD"
            app:layout_constraintTop_toBottomOf="@id/txt_sex"
            app:layout_constraintBottom_toTopOf="@id/txt_department"
        />
        <TextView
            android:id="@+id/txt_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="单位"
            android:textSize="16sp"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@id/line3"
            app:layout_constraintBottom_toTopOf="@id/line4" />
        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#DDDDDD"
            app:layout_constraintTop_toBottomOf="@id/txt_department"
            app:layout_constraintBottom_toTopOf="@id/txt_job"
            />
        <TextView
            android:id="@+id/txt_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="级别"
            android:textSize="16sp"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@id/line4"
            app:layout_constraintBottom_toTopOf="@id/line5"/>
        <View
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#DDDDDD"
            app:layout_constraintTop_toBottomOf="@id/txt_job"
            app:layout_constraintBottom_toTopOf="@id/line6"
            />

        <View
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:foreground="#EEEEEE"
            app:layout_constraintTop_toBottomOf="@id/line5"
            app:layout_constraintBottom_toTopOf="@id/line7"
            />

        <View
            android:id="@+id/line7"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:foreground="#EEEEEE"
            app:layout_constraintTop_toBottomOf="@id/line6"
            app:layout_constraintBottom_toTopOf="@id/useFinger"
            />
        <Switch
            android:id="@+id/useFinger"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="指纹识别登录"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="#555555"
            android:theme="@style/MySwitch"
            app:layout_constraintTop_toBottomOf="@id/line7"
            app:layout_constraintBottom_toTopOf="@id/line81"/>
        <View
            android:id="@+id/line81"
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:foreground="#EEEEEE"
            app:layout_constraintTop_toBottomOf="@id/useFinger"
            app:layout_constraintBottom_toTopOf="@id/listview_services"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listview_services"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/line81"
            android:clickable="true"
            android:focusable="true"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>