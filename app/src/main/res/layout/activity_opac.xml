<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpacActivity">
    <LinearLayout
        android:id="@+id/tb4"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:background="@drawable/shadow"
        app:layout_constraintBottom_toTopOf="@id/opac_books">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="6dp"
            android:text="OPAC检索"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/opac_books"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tb4"
        app:layout_constraintBottom_toTopOf="@id/panel1"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"/>
    <ImageView
        android:id="@+id/opac_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/opac"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/panel1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/opac_books"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#EEEEEE"
        android:padding="12dp">

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/opac_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:roundedCorners="true"
            app:bootstrapSize="md"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textCursorDrawable="@drawable/caret_selector"/>
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/opac_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检索"
            app:bootstrapSize="md"
            app:bootstrapBrand="primary"
            android:textColor="#FFFFFF"
            app:roundedCorners="true"
            android:onClick="NlpSearch"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>