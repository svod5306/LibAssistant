<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/service_Icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_margin="6dp"
        app:layout_constraintTop_toTopOf="@id/service_Name"
        app:layout_constraintBottom_toBottomOf="@id/service_Name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/nomsg"/>
    <TextView
        android:id="@+id/service_Name"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:text="额外功能"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@id/service_Icon"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:src="@drawable/seemore"
        app:layout_constraintTop_toTopOf="@id/service_Name"
        app:layout_constraintBottom_toBottomOf="@id/service_Name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="22dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>