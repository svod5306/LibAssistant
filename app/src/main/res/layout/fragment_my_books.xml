<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.myborrowedbooks.MyBorrowedBooksFragment"
    android:id="@+id/frag_mybooks">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/tb2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:background="@drawable/shadow"
            app:layout_constraintBottom_toTopOf="@id/borrow_tips">
            <TextView
                android:id="@+id/txt_borrowed_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的借阅统计信息："
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:layout_weight="1"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/scanBarCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@android:drawable/ic_menu_camera"
                />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/borrow_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/tb2">
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/borrow_tips"
                app:layout_constraintBottom_toBottomOf="@id/borrow_tips"
                android:layout_width="match_parent"
                android:layout_height="160dp"/>
            <View
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@id/pieChart1"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listview_now_borrowed_books"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/borrow_tips"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>