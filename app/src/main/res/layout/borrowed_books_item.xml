<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp">

    <ImageView
        android:id="@+id/imgbook"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:src="@drawable/nowborrowed"
        android:foregroundGravity="left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txttitle"
        android:text="题名"
        app:layout_constraintTop_toTopOf="@id/imgbook"
        app:layout_constraintLeft_toRightOf="@id/imgbook"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:inputType="textMultiLine"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtgch"
        android:text="馆藏号"
        app:layout_constraintTop_toBottomOf="@id/txttitle"
        app:layout_constraintLeft_toRightOf="@id/imgbook"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtgcd"
        android:text="馆藏地"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/txtgch"
        app:layout_constraintLeft_toRightOf="@id/imgbook"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtjssj"
        app:layout_constraintLeft_toRightOf="@id/imgbook"
        app:layout_constraintTop_toBottomOf="@id/txtgcd"
        android:layout_marginTop="2dp"
        android:text="借书时间"
        android:textSize="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txthssj"
        app:layout_constraintLeft_toRightOf="@id/imgbook"
        app:layout_constraintTop_toBottomOf="@id/txtjssj"
        android:layout_marginTop="2dp"
        android:text="还书时间"
        android:textSize="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtcqqk"
        app:layout_constraintLeft_toRightOf="@id/imgbook"
        app:layout_constraintTop_toBottomOf="@id/txthssj"
        android:layout_marginTop="2dp"
        android:text="超期情况"
        android:textSize="10dp"
        android:textColor="#FF5A00"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"/>
    <View
        android:id="@+id/blank_line"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtcqqk"
        app:layout_constraintBottom_toTopOf="@id/btn_zhuanjie"
        android:layout_height="6dp"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/btn_zhuanjie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintTop_toBottomOf="@id/blank_line"
        app:layout_constraintRight_toLeftOf="@id/btn_xujie"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/zhuanjie"
        android:layout_marginRight="16dp" />
    <ImageView
        android:id="@+id/btn_xujie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintTop_toBottomOf="@id/blank_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/xujie"
        android:layout_marginRight="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>